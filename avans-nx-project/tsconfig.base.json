{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@avans-nx-project/shared/api": [
        "libs/shared/api/src/index.ts"
      ],
      "@avans-nx-project/shared/util-env": [
        "libs/shared/util-env/src/index.ts"
      ],
      "@avans-nx-project/frontend/common": [
        "libs/frontend/common/src/index.ts"
      ],
      "@avans-nx-project/frontend/features": [
        "libs/frontend/features/src/index.ts"
      ],
      "@avans-nx-project/frontend/ui": [
        "libs/frontend/ui/src/index.ts"
      ],
      "@avans-nx-project/backend/features": [
        "libs/backend/features/src/index.ts"
      ],
      "@avans-nx-project/backend/dto": [
        "libs/backend/dto/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
